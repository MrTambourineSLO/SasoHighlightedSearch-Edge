{
    "author": "Saso Miocinovic",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "20": "icon_edge.png"
        }
    },
    "description": "Allows for a quick search of highlighted text with search engines.",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "manifest_version": 2,
    "name": "Saso Highlighted Search",
    "options_page": "options.html",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ],
    "version": "1.0",
    "web_accessible_resources": [
        "options.html"
    ],
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}